<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="15.1.1012" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.1.1012" />
    <PackageReference Include="Mono.Cecil" Version="0.10.3" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Aspekt.Bootstrap\Aspekt.Bootstrap.csproj" />
    <ProjectReference Include="..\Aspekt\Aspekt.csproj" />
  </ItemGroup>

  <Target Name="CopyPackageFilesToOutputDirectory"
          AfterTargets="Build"
          Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
    <ItemGroup>
      <_PackageReferenceFiles Include="$(NugetPackageRoot)Mono.Cecil\0.10.3\lib\netstandard1.3\*.dll" />
    </ItemGroup>

    <Copy SourceFiles="@(_PackageReferenceFiles)"
          DestinationFolder="$(TargetDir)" />
  </Target>
</Project>
